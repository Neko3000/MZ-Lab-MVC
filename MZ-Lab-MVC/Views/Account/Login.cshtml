@model MZ_Lab_MVC.Models.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Account";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

        <section>

            <div class="signinpanel">

                <div class="row">

                    <div class="col-md-7">

                        <div class="signin-info">
                            <div class="logopanel">
                                <h1><span>[</span> MZLab.Dashboard <span>]</span></h1>
                            </div><!-- logopanel -->

                            <div class="mb20"></div>

                            <h5><strong>ようこそ、宮崎研究室の管理用ページ !</strong></h5>
                            <ul>
                                <li><i class="fa fa-arrow-circle-o-right mr5"></i> 学術文章管理</li>
                                <li><i class="fa fa-arrow-circle-o-right mr5"></i> メンバー管理</li>
                            </ul>
                            <div class="mb20"></div>
                        </div><!-- signin0-info -->

                    </div><!-- col-sm-7 -->

                    <div class="col-md-5">

                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <h4 class="nomargin">アカウント</h4>
                        <p class="mt5 mb20">Login to access your account.</p>

                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control uname", @placeholder = "Username" } })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control pword", @placeholder = "Password" } })
                        <button class="btn btn-success btn-block" type="submit">ログイン</button>
                }
                    </div><!-- col-sm-5 -->

                </div><!-- row -->

                <div class="signup-footer">
                    <div class="pull-left">
                        &copy; 2018. All Rights Reserved. Shizuoka University Miyazaki Lab.
                    </div>

                </div>

            </div><!-- signin -->

        </section>


